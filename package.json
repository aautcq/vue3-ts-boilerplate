{
  "name": "vue3-ts-boilerplate",
  "private": true,
  "version": "0.0.0",
  "description": "Boilerplate project with Vue 3, Vite, Pinia, TypeScript",
  "author": "Adrien Autricque <adrien.autricque@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": "~18.7.0",
    "npm": "~8.15.0"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "scripts": {
    "start": "node ./server",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "jest",
    "clear": "rimraf node_modules package-lock.json",
    "reset": "npm run clear && npm install",
    "format": "prettier . --write --ignore-path .gitignore",
    "lf": "npm run lint && npm run format",
    "lint": "eslint --ext .ts --ignore-path .gitignore --fix src"
  },
  "dependencies": {
    "axios": "~1.1.3",
    "lodash": "~4.17.21",
    "pinia": "~2.0.23",
    "vue": "~3.2.41",
    "vue-i18n": "~9.2.2",
    "vue-router": "~4.1.6"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "~6.0.3",
    "@types/jest": "~29.2.1",
    "@types/lodash": "~4.14.187",
    "@types/node": "~18.11.9",
    "@types/uuid": "~8.3.4",
    "@typescript-eslint/eslint-plugin": "~5.44.0",
    "@typescript-eslint/parser": "~5.44.0",
    "@vitejs/plugin-vue": "~3.2.0",
    "@vue/eslint-config-prettier": "~7.0.0",
    "@vue/eslint-config-typescript": "~11.0.2",
    "eslint": "~8.28.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-vue": "~9.8.0",
    "jest": "~29.2.2",
    "prettier": "~2.8.0",
    "rimraf": "~3.0.2",
    "sass": "~1.56.0",
    "ts-jest": "~29.0.3",
    "typescript": "~4.8.4",
    "vite": "~3.2.2",
    "vite-plugin-eslint": "~1.8.1",
    "vue-tsc": "~1.0.9"
  }
}
